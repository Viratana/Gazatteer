{
  "openapi": "3.0.3",
  "info": { "title": "Gazatteer API", "version": "1.0.0" },
  "servers": [{ "url": "http://127.0.0.1:8000" }],

  "tags": [
    { "name": "App"},
    { "name": "Auth", "description": "Authentication endpoints" },
    { "name": "Locations", "description": "Location APIs" }
  ],

  "paths": {
    "/api/v1": {
      "get": {
        "tags": ["App"],
        "responses": { "200": { "description": "OK" } }
      }
    },

    "/api/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "test@gmail.com" },
                  "password": { "type": "string", "example": "123456" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" }
        }
      }
    },

    "/api/location": {
      "get": {
        "tags": ["Locations"],
        "summary": "List locations",
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "tags": ["Locations"],
        "summary": "Create location",
        "responses": { "201": { "description": "Created" } }
      }
    },

    "/api/location/{location}": {
      "get": {
        "tags": ["Locations"],
        "summary": "Show location",
        "parameters": [
          {
            "name": "location",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },

    "/api/location/search/{term}": {
      "get": {
        "tags": ["Locations"],
        "summary": "Search location",
        "parameters": [
          { "name": "term", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    }
  }
}
